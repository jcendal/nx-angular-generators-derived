{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "./src",
    "noImplicitAny": false,
    "sourceMap": false,
    "declaration": true,
    "outDir": "./lib",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {}
  },
  "ts-node": {
    "compilerOptions": {
      "module": "nodenext",
      "target": "ES2017"
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "tmp"]
}
